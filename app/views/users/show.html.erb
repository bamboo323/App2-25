<%= flash[:notice]%>



<%= render 'list',user: @user, book: @book %>


<h2>Books</h2>
<h3>Title</h3>
<h3>Opinion</h3>

  <% @books.each do |book| %>
    <div>
      <p><%= image_tag book.user.get_profile_image(100,100) %></p>
      <%= link_to book_path(book.id) do %>
      <p><%= book.title %></p>
      <% end %>
      <p><%= book.body %></p>
    </div>
  <% end %>
